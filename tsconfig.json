{
  "compilerOptions": {
      "outDir": "lib",
      "lib": ["ES2017"],
      "target": "ES6",
      "moduleResolution": "node",
      "module": "commonjs",
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,  
      "resolveJsonModule": true,
      "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./lib",
    "node_modules",
    "**/__test__/*",
    "**/test/*",
    "*.test.ts"
  ]
}
